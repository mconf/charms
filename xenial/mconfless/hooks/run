#!/bin/bash

set -e

t="join"
h="https://html5.dev.mconf.com"
r="Test Room"
b=1
w=2000
l=60000

usage() {
  echo "Usage: $0"
  echo "  -t test"
  echo "           lis"
  echo "           mic"
  echo "           cam"
  echo "           all"
  echo "           msg"
  echo "           pad"
  echo "  default: join"
  echo "  -h host  server url         default: https://html5.dev.mconf.com"
  echo "  -r room  room name          default: \"Test Room\""
  echo "  -b bots  number of bots     default: 1"
  echo "  -w wait  time between bots  default: 2000 (2 seconds)"
  echo "  -l life  bot life span      default: 60000 (60 seconds)"
  exit 1
}

# Gather run arguments
while getopts ":t:h:r:b:w:l:" o; do
  case "${o}" in
    t)
      t=${OPTARG}
      ((t == "lis" || t == "mic" || t == "cam" || t == "msg" || t == "pad" || t == "all")) || usage
      ;;
    h)
      h=${OPTARG}
      ;;
    r)
      r=${OPTARG}
      ;;
    b)
      b=${OPTARG}
      ;;
    w)
      w=${OPTARG}
      ;;
    l)
      l=${OPTARG}
      ;;
    *)
      usage
      ;;
  esac
done

cd /tmp/mconfless

echo "Copying config file..."
cp -rf .env.template .env

npm install

export BIGBLUEBOT_BROWSER=google-chrome

echo "Setting test variables..."
export BIGBLUEBOT_HOST=$h
echo "Host: $h"
export BIGBLUEBOT_ROOM=$r
echo "Room: $r"
export BIGBLUEBOT_BOTS=$b
echo "Bots: $b"
export BIGBLUEBOT_WAIT=$w
echo "Wait: $w"
export BIGBLUEBOT_LIFE=$l
echo "Life: $l"

echo "Running Docker..."
case $t in
  lis)
    echo "Starting listen only test"
    node listen-only.js
    ;;
  mic)
    echo "Starting audio test"
    node audio.js
    ;;
  cam)
    echo "Starting video test"
    node video.js
    ;;
  all)
    echo "Starting audio and video test"
    node audio-and-video.js
    ;;
  msg)
    echo "Starting chat test"
    node chat.js
    ;;
  pad)
    echo "Starting note test"
    node note.js
    ;;
  *)
    echo "Starting join test"
    node join.js
    ;;
esac
